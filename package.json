{
  "name": "ganttris",
  "version": "1.4.0",
  "description": "A project management tool",
  "main": "src/index.html",
  "scripts": {
    "build": "gulp build",
    "start": "live-server src",
    "start:test": "live-server --port=8080 --no-browser --quiet src",
    "deploy": "gh-pages -d dist",
    "test": "jest",
    "test:e2e": "node e2e-runner.js",
    "test:e2e:debug": "node e2e-runner.js --debug",
    "test:e2e:direct": "node direct-e2e-runner.js",
    "test:stop": "node taskkill-all.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ganttris/ganttris.git"
  },
  "dependencies": {
    "gulp": "^5.0.0",
    "gulp-concat": "^2.6.1",
    "gulp-cssnano": "^2.1.3",
    "gulp-htmlmin": "^5.0.1",
    "gulp-rename": "^2.0.0",
    "gulp-uglify": "^3.0.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@types/jest": "^29.5.10",
    "cross-env": "^7.0.3",
    "del": "^6.0.0",
    "gh-pages": "^6.3.0",
    "gulp-html-replace": "^1.6.2",
    "gulp-inject": "^5.0.5",
    "gulp-javascript-obfuscator": "^1.1.6",
    "gulp-replace": "^1.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "live-server": "^1.2.0",
    "tcp-port-used": "^1.0.2"
  },
  "author": "Joe Bader",
  "license": "Proprietary",
  "jest": {
    "testEnvironment": "jsdom",
    "setupFiles": [
      "<rootDir>/jest.setup.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/e2e/"
    ]
  }
}
